<!DOCTYPE html>
<html>
<head>
  <title>Beapy - Simple Blog Engine</title>
  <% if (env === 'development') { %>
  <link href="/components/normalize-css/normalize.css" rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet" />
  <link href="/components/prism/prism.css" rel="stylesheet" />
  <script src="http://127.0.0.1:35729/livereload.js"></script>
  <% } else { %>
  <link href="/dist/beapy.min.css" rel="stylesheet" />
  <% } %>
  <script id="md-files-template" type="text/x-handlebars-template">
      <ul>{{#files}}<li><span class="md" data-name="{{name}}">{{data.lang.fr_FR}}</span></li>{{/files}}</ul>
  </script>
  <script id="md-tags-template" type="text/x-handlebars-template">
      <ul>{{#tags}}<li><span>{{this}}</span></li>{{/tags}}</ul>
  </script>
  <script id="md-header-template" type="text/x-handlebars-template">
      <div class="date">{{date}}</div>
      <ul>{{#tags}}<li><span>{{this}}</span></li>{{/tags}}</ul>
      <h1>{{title}}</h1>
  </script>
</head>
<body>
  <div class="page">
    <section class="header">
      <h1 class="title">Beapy</h1>
      <p>Welcome to a simple Blog Engine based on markdown rendering.</p>
    </section>
    <section class="content">
      <section class="article">
        <header class="current"></header>
        <article class="current"></article>
      </section>
      <section class="sidebar">
        <nav class="menu"></nav>
        <nav class="tags"></nav>
      </section>
    </section>
    <section class="comment">
      <% if (env !== 'development') { %>
      <div id="disqus_thread"></div>
      <script>
        var disqus_shortname = '<%= github %>';
        (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      </script>
      <a href="http://disqus.com" class="dsq-brlink">
        comments powered by
        <span class="logo-disqus">Disqus</span>
      </a>
      <% } %>
    </section>
  </div>
  <% if (env === 'development') { %>
  <script src="components/jquery/jquery.js"></script>
  <script src="components/lodash/lodash.js"></script>
  <script src="components/handlebars.js/dist/handlebars.js"></script>
  <script src="components/marked/lib/marked.js"></script>
  <script src="components/prism/prism.js"></script>
  <script src="components/moment/moment.js"></script>
  <script src="components/moment/min/lang/fr.js"></script>
  <script src="components/history.js/scripts/uncompressed/history.js"></script>
  <script src="components/history.js/scripts/uncompressed/history.adapter.jquery.js"></script>
  <script src="js/main.js"></script>
  <% } else { %>
  <script src="dist/beapy.min.js"></script>
  <% } %></body>
</html>